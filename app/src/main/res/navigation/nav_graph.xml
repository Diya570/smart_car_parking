<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dashboardFragment">

    <navigation android:id="@+id/auth_flow" app:startDestination="@id/loginFragment">
        <fragment
            android:id="@+id/loginFragment"
            android:name="com.smartparking.app.ui.fragments.auth.LoginFragment"
            android:label="Login"
            tools:layout="@layout/fragment_login">
            <action
                android:id="@+id/action_loginFragment_to_registerFragment"
                app:destination="@id/registerFragment" />
            <action
                android:id="@+id/action_login_successful"
                app:destination="@id/dashboardFragment"
                app:popUpTo="@id/nav_graph"
                app:popUpToInclusive="true"/>
            <action
                android:id="@+id/action_loginFragment_to_forgotPasswordFragment"
                app:destination="@id/forgotPasswordFragment" />
        </fragment>
        <fragment
            android:id="@+id/registerFragment"
            android:name="com.smartparking.app.ui.fragments.auth.RegisterFragment"
            android:label="Register"
            tools:layout="@layout/fragment_register" >
            <action
                android:id="@+id/action_register_successful"
                app:destination="@id/dashboardFragment"
                app:popUpTo="@id/nav_graph"
                app:popUpToInclusive="true"/>
        </fragment>
        <fragment
            android:id="@+id/forgotPasswordFragment"
            android:name="com.smartparking.app.ui.fragments.auth.ForgotPasswordFragment"
            android:label="Forgot Password"
            tools:layout="@layout/fragment_forgot_password" />
            <action
                android:id="@+id/action_forgotPasswordFragment_to_loginFragment"
                app:destination="@id/loginFragment" />
    </navigation>

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.smartparking.app.ui.fragments.user.DashboardFragment"
        android:label="Home"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_dashboardFragment_to_lotDetailsFragment"
            app:destination="@id/lotDetailsFragment" />

        <action
            android:id="@+id/action_dashboardFragment_to_bookingDetailsFragment"
            app:destination="@id/bookingDetailsFragment" />

    </fragment>
    <fragment
        android:id="@+id/lotsListFragment"
        android:name="com.smartparking.app.ui.fragments.user.LotsListFragment"
        android:label="@string/menu_list"
        tools:layout="@layout/fragment_lots_list" >
        <action
            android:id="@+id/action_lotsListFragment_to_lotDetailsFragment"
            app:destination="@id/lotDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/myBookingsFragment"
        android:name="com.smartparking.app.ui.fragments.user.MyBookingsFragment"
        android:label="@string/menu_bookings"
        tools:layout="@layout/fragment_my_bookings" >
        <action
            android:id="@+id/action_myBookingsFragment_to_bookingDetailsFragment"
            app:destination="@id/bookingDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.smartparking.app.ui.fragments.user.ProfileFragment"
        android:label="@string/menu_profile"
        tools:layout="@layout/fragment_profile">
        <action
        android:id="@+id/action_profileFragment_to_notificationsFragment"
        app:destination="@id/notificationsFragment" />
    </fragment>

    <fragment
        android:id="@+id/notificationsFragment"
        android:name="com.smartparking.app.ui.fragments.user.NotificationsFragment"
        android:label="Notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/lotDetailsFragment"
        android:name="com.smartparking.app.ui.fragments.user.LotDetailsFragment"
        android:label="Lot Details"
        tools:layout="@layout/fragment_lot_details">
        <action
            android:id="@+id/action_lotDetailsFragment_to_slotSelectionFragment"
            app:destination="@id/slotSelectionFragment" />
        <argument
            android:name="parkingLot"
            app:argType="com.smartparking.app.data.model.ParkingLot" />
    </fragment>
    <fragment
        android:id="@+id/slotSelectionFragment"
        android:name="com.smartparking.app.ui.fragments.user.SlotSelectionFragment"
        android:label="Select Slot &amp; Time"
        tools:layout="@layout/fragment_slot_selection">
        <action
            android:id="@+id/action_slotSelectionFragment_to_bookingReviewFragment"
            app:destination="@id/bookingReviewFragment" />
        <argument
            android:name="parkingLot"
            app:argType="com.smartparking.app.data.model.ParkingLot" />
    </fragment>
    <fragment
        android:id="@+id/bookingReviewFragment"
        android:name="com.smartparking.app.ui.fragments.user.BookingReviewFragment"
        android:label="Review Booking"
        tools:layout="@layout/fragment_booking_review">
        <action
            android:id="@+id/action_bookingReviewFragment_to_bookingConfirmationFragment"
            app:destination="@id/bookingConfirmationFragment"
            app:popUpTo="@id/slotSelectionFragment"
            app:popUpToInclusive="true"/>
        <argument
            android:name="parkingLot"
            app:argType="com.smartparking.app.data.model.ParkingLot" />
        <argument
            android:name="selectedSlot"
            app:argType="com.smartparking.app.data.model.Slot" />
        <argument
            android:name="startTime"
            app:argType="long" />
        <argument
            android:name="endTime"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/bookingConfirmationFragment"
        android:name="com.smartparking.app.ui.fragments.user.BookingConfirmationFragment"
        android:label="Booking Confirmed"
        tools:layout="@layout/fragment_booking_confirmation">
        <action
            android:id="@+id/action_bookingConfirmationFragment_to_myBookingsFragment"
            app:destination="@id/myBookingsFragment"
            app:popUpTo="@id/dashboardFragment" />
        <argument
            android:name="confirmedBooking"
            app:argType="com.smartparking.app.data.model.Booking" />
        <argument
            android:name="parkingLot"
            app:argType="com.smartparking.app.data.model.ParkingLot" />
        <argument
            android:name="slot"
            app:argType="com.smartparking.app.data.model.Slot" />
    </fragment>

    <fragment
        android:id="@+id/adminDashboardFragment"
        android:name="com.smartparking.app.ui.fragments.admin.AdminDashboardFragment"
        android:label="@string/menu_admin"
        tools:layout="@layout/fragment_admin_dashboard" >
        <action
            android:id="@+id/action_adminDashboardFragment_to_manageLotsFragment"
            app:destination="@id/manageLotsFragment" />
        <action
            android:id="@+id/action_adminDashboardFragment_to_adminBookingsFragment"
            app:destination="@id/adminBookingsFragment" />
        <action
            android:id="@+id/action_adminDashboardFragment_to_usersFragment"
            app:destination="@id/usersFragment" />
        <action
            android:id="@+id/action_adminDashboardFragment_to_announcementsFragment"
            app:destination="@id/announcementsFragment" />
        <action
            android:id="@+id/action_adminDashboardFragment_to_scanQrFragment"
            app:destination="@id/scanQrFragment" />
        <action
            android:id="@+id/action_adminDashboardFragment_to_reportsFragment"
            app:destination="@id/reportsFragment" />
    </fragment>
    <fragment
        android:id="@+id/manageLotsFragment"
        android:name="com.smartparking.app.ui.fragments.admin.ManageLotsFragment"
        android:label="Manage Lots"
        tools:layout="@layout/fragment_manage_lots">
        <action
            android:id="@+id/action_manageLotsFragment_to_manageSlotsFragment"
            app:destination="@id/manageSlotsFragment" />
    </fragment>
    <fragment
        android:id="@+id/manageSlotsFragment"
        android:name="com.smartparking.app.ui.fragments.admin.ManageSlotsFragment"
        android:label="Manage Slots"
        tools:layout="@layout/fragment_manage_slots">
        <argument
            android:name="lotId"
            app:argType="string" />
        <argument
            android:name="lotName"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/adminBookingsFragment"
        android:name="com.smartparking.app.ui.fragments.admin.AdminBookingsFragment">
        <action
        android:id="@+id/action_adminBookingsFragment_to_adminBookingDetailsFragment"
        app:destination="@id/adminBookingDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/adminBookingDetailsFragment"
        android:name="com.smartparking.app.ui.fragments.admin.AdminBookingDetailsFragment"
        android:label="Booking Details"
        tools:layout="@layout/fragment_admin_booking_details">
        <argument
            android:name="booking"
            app:argType="com.smartparking.app.data.model.Booking" />
    </fragment>

    <fragment
        android:id="@+id/usersFragment"
        android:name="com.smartparking.app.ui.fragments.admin.UsersFragment">
        <action
            android:id="@+id/action_usersFragment_to_adminUserDetailsFragment"
            app:destination="@id/adminUserDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/adminUserDetailsFragment"
        android:name="com.smartparking.app.ui.fragments.admin.AdminUserDetailsFragment"
        android:label="User Details"
        tools:layout="@layout/fragment_admin_user_details">
        <argument
            android:name="user"
            app:argType="com.smartparking.app.data.model.User" />
        <action
            android:id="@+id/action_adminUserDetailsFragment_to_adminBookingDetailsFragment"
            app:destination="@id/adminBookingDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/announcementsFragment"
        android:name="com.smartparking.app.ui.fragments.admin.AnnouncementsFragment"
        android:label="Send Announcement"
        tools:layout="@layout/fragment_announcements" />
    <fragment
        android:id="@+id/scanQrFragment"
        android:name="com.smartparking.app.ui.fragments.admin.ScanQrFragment"
        android:label="Scan for Check-in"
        tools:layout="@layout/fragment_scan_qr" />
    <fragment
        android:id="@+id/reportsFragment"
        android:name="com.smartparking.app.ui.fragments.admin.ReportsFragment"
        android:label="Generate Reports"
        tools:layout="@layout/fragment_reports" />
    <fragment
        android:id="@+id/bookingDetailsFragment"
        android:name="com.smartparking.app.ui.fragments.user.BookingDetailsFragment"
        android:label="Booking Details"
        tools:layout="@layout/fragment_booking_details" >
        <argument
            android:name="booking"
            app:argType="com.smartparking.app.data.model.Booking" />
    </fragment>

</navigation>